@page
@model PizzaPros.Pages.Admin.Toppings.UpsertModel





<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.ToppingsItemObj.Toppings.Id != 0)
            {
                <input type="hidden" asp-for="ToppingsItemObj.Toppings.Id" />
            }
            <div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
                <h2 class="text-primary font-weight-light">@(Model.ToppingsItemObj.Toppings.Id!=0 ? "Update " : "Create ")Topping Items</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="ToppingsItemObj.Toppings.Name" ></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control text-lowercase" asp-for="ToppingsItemObj.Toppings.Name" />
                        <span class="text-danger" asp-validation-for="ToppingsItemObj.Toppings.Name"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="ToppingsItemObj.Toppings.ToppingTypeId"></label>
                    </div>
                    <div class="col-9">
                        @Html.DropDownListFor(m => m.ToppingsItemObj.Toppings.ToppingTypeId,
                                                    Model.ToppingsItemObj.ToppingTypeList,
                                                    "- Please select a Topping Type -",
                                                    new { @class = "form-control" })
                        <span class="text-danger" asp-validation-for="ToppingsItemObj.Toppings.ToppingTypeId"></span>
                    </div>
                </div>
            

                <div class="form-group row">

                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">

                                @if (Model.ToppingsItemObj.Toppings.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>

</form>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });


    </script>
}