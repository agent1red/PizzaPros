@page
@model PizzaPros.Pages.Admin.CrustType.UpsertModel


<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.PizzaCrustTypeObj.Id != 0)
            {
                <input type="hidden" asp-for="PizzaCrustTypeObj.Id" />
            }
            <div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
                <h2 class="text-primary font-weight-light">@(Model.PizzaCrustTypeObj.Id!=0 ? "Update " : "Create New ")Crust Type</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="PizzaCrustTypeObj.CrustType"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control text-lowercase" onkeyup="this.value = this.value.toLowerCase();" asp-for="PizzaCrustTypeObj.CrustType" />
                        <span class="text-danger" asp-validation-for="PizzaCrustTypeObj.CrustType"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="PizzaCrustTypeObj.CrustTypeDescription"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" onkeyup="this.value = this.value.toLowerCase();" asp-for="PizzaCrustTypeObj.CrustTypeDescription" />
                        <span class="text-danger" asp-validation-for="PizzaCrustTypeObj.CrustTypeDescription"></span>
                    </div>
                </div>
                <div class="form-group row">

                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary form-control">@(Model.PizzaCrustTypeObj.Id!=0 ? "Update" : "Create")</button>
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
