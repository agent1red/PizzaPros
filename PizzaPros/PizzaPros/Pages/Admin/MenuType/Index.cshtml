@page
@using PizzaPros.Utility


@if (User.IsInRole(SD.ManagerRole))
{
    <div class="border backgroundWhite container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary font-weight-light">Menu Item List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-page="Upsert" class="btn btn-primary"><i class="far fa-plus-square"> &nbsp; Create New</i></a>
            </div>
        </div>
        <br />
        <table id="DT-load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Menu Item Type</th>
                    <th>Menu Item Size</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
}
else
{
    <h1 class="text-danger">
        Access denied

    </h1>
    <p class="text-danger">You do not have access to this resource.</p>
}

@*specific style to this page only*@
<style>

    tr td:first-child, tr td:nth-child(n+4):nth-child(n-5) {
        text-transform: capitalize;
    }

    tr td:nth-child(3)::before {
        content: "\0024";
    }

</style>




@section Scripts{
    <script src="~/js/pizzaType.js"></script>
}

